<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="50dp">

    <TextView
        android:id="@+id/tv_itemUsersDetailsFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_itemUsersDetailsLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Last Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_itemUsersDetailsFirstName"
        app:layout_constraintStart_toStartOf="@+id/tv_itemUsersDetailsFirstName"
        app:layout_constraintTop_toBottomOf="@+id/tv_itemUsersDetailsFirstName" />

    <TextView
        android:id="@+id/tv_itemUsersDetailsCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="City"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_itemUsersDetailsLastName"
        app:layout_constraintStart_toStartOf="@+id/tv_itemUsersDetailsLastName"
        app:layout_constraintTop_toBottomOf="@+id/tv_itemUsersDetailsLastName" />
</androidx.constraintlayout.widget.ConstraintLayout>